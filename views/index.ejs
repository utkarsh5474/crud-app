<!-- include header -->
<%- include('include/_header')%>
<!-- /include header -->

<script>
  function toggle(className, displayState) {
    var elements = document.getElementsByClassName(className);
    for (var i = 0; i < elements.length; i++) {
      elements[i].style.display = displayState;
    }
  }
</script>

<!-- Main site -->
<main id="site-main">
  <div class="container roww">

    <div class="col-sm-10">
      <div class="h2">Oxygen Suppliers</div>
      <div class="h4">
        Update the availability of Oxygen once you connect with the supplier.
      </div>
    </div>

    <a href="/add-user" class="border-shadow btn btn-outline-primary button">
      <span class="text-gradient">
        Add New Suppliers <i class="fas fa-user"></i></span>
    </a>

    <div class="container">

      <div class="h5">Filter by availability</div>

      <div class="">
        <div class="btn-sm border-shadow btn btn-outline-primary button col-sm-1 availability-button">
          <span class="text-gradient">
            <div onclick='toggle("nahi_hai","block"); toggle("hai","block");'>
              Both
            </div>
          </span>
        </div>
        <div class="">
        <div class="btn-sm border-shadow btn btn-outline-primary button col-sm-1 availability-button">
          <span class="text-gradient">
            <div onclick='toggle("nahi_hai","none"); toggle("hai","block");'>
              Yes
            </div>
          </span>
        </div>
        <div class="btn-sm border-shadow btn btn-outline-primary button col-sm-1 availability-button">
          <span class="text-gradient">
            <div onclick='toggle("hai","none"); toggle("nahi_hai","block");'>
              No
            </div>
          </span>
        </div>
      </div>
    </div>
    </div>
  
    <!-- form handling -->
    <form action="/" method="POST">
      <div class="">
        <div class="row"><%- include('include/_show')%></div>
      </div>
    </form>
  </div>
</main>
<!-- /Main site -->

<!-- include footer-->
<%- include('include/_footer')%>
<!-- /include footer-->
